#include <iostream.h>
#include <conio.h>

class Complex {
public: 
     void Init(int rl, int im = 0); 
     void Read();           
     void Display();        
     void Add(Complex x);  
     void Sub(Complex x);  
     void Mul(Complex x);  
private:
     int real;  
     int imaginary; 
 
};

void Complex::Read()
{
cout<<"Enter real : ";
cin>>real;
cout<<"Enter imaginary : ";
cin>>imaginary;
}
 
void Complex::Display()
{
cout<<"real="<<real<<"\n";
cout<<"imaginary="<<imaginary<<"\n";
}
void Complex::Init(int rl, int im)
{
real=rl;
imaginary=im;
}
void  Complex::Add(Complex x)
{
     real = real + x.real;
     imaginary = imaginary + x.imaginary;
}
void  Complex::Sub(Complex x)
{
     real = real - x.real;
     imaginary = imaginary - x.imaginary;
}
void  Complex::Mul(Complex x)
{
     real = real*x.real-imaginary*x.imaginary;
     imaginary = real*x.imaginary+imaginary*x.real;
}
 
int main()
{
     Complex number;  
     number.Init(1,3);
     cout<<"1 number =";
     number.Display();
     Complex num2;     
     num2.Read();
     cout<<"2 number =";
     num2.Display();
     number.Add(num2);  
     std::cout<<"Add =";
     number.Display();
     number.Sub(num2); 
     std::cout<<"Sub =";
     number.Display();
     getch();
     return 1;
}
